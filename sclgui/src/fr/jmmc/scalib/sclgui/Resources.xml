        <action>
            <name>searchScienceObject</name>
            <text></text>
            <icon>search.png</icon>
            <description>Try to get star properties from Simbad</description>
        </action>
        <action>
            <name>brightQuery</name>
            <text>Bright</text>
            <icon></icon>
            <description>Launch Calibrators Search using the Bright Scenarion</description>
        </action>
        <action>
            <name>faintQuery</name>
            <text>Faint</text>
            <icon></icon>
            <description>Launch Calibrators Search using the Faint Scenarion</description>
        </action>
        <action>
            <name>searchCalibrators</name>
            <text>GO</text>
            <icon></icon>
            <description>Launch Calibrators Search</description>
        </action>
    </actions>
</resources>
